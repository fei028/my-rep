/*header*/
.main-header {
	position:relative;
	max-height:100px;
	z-index:1030;	
}
.main-header .logo {
	width:200px;
	height:50px;
	border:none;
	line-height:50px;
	padding-left:8px;
	float:left;
	text-decoration:none;
}
.main-header .navbar {
	margin-bottom:0;
	margin-left:200px;
	border:none;
	min-height:50px;
	border-radius:0;
}
.main-header .navbar .menu{
	overflow:hidden;
	padding:0;
	margin:0;
	float:left;
}
.navbar .menu li{
	float:left;
	line-height:50px;
	width:108px;
	padding:0;
	margin:0;
	border:none;
}
.navbar .menu li a, .navbar .menu a:visited{
	display:block;
	text-align:center;
	text-decoration:none;
}
.navbar .custom-menu {
	float:right;
}
.custom-menu .label {
	position:absolute;
	top:9px;
	right:7px;
	text-align:center;
	font-size:9px;
	padding:2px 3px;
	line-height:.9;
}
.custom-menu > ul > li > .dropdown-menu {
	position:absolute;
	right:5%;
	left:auto;
	width:280px;
	padding:0 0 0 0 !important;
	margin:0 !important;
	top:100%;
	box-shadow:none !important;
}
.custom-menu > ul > li > .dropdown-menu > .header {
	border-top-left-radius:4px;
	border-top-right-radius:4px;
	border-bottom-right-radius:0;
	border-bottom-left-radius:0;
	padding:7px 10px;
}
.custom-menu > ul > li > .dropdown-menu > .footer {
	text-align:center;
}
.wrap-content {
	padding:0;
	margin:0;
	border:none;
	width:100%;
}
/*sidebar*/
.main-sidebar {
	position: absolute;
    top: 0;
    left: 0;
	padding:0;
	padding-top: 50px;
	min-height:100%;
	width:194px;
	border:none;
	z-index: 810;
	transition: transform .3s ease-in-out,margin .3s ease-in-out;
}
.sidebar {
	border:none;
	padding:0;
	margin:0;
}
.sidebar-nav {
	padding:0;
	line-height:40px;
	margin:0;
	border:none;	
	min-height:40px;
}
.sidebar-nav .sidebar-title{
	float:left;
	padding-left:22px;
}
.sidebar-nav .sidebar-toggle {
	float: left;
	margin-left:95px;
}
.sidebar-menu {
	margin:0;
	padding:0;
	white-space:nowrap !important;
}
.sidebar-menu > li {
	margin:0;
	padding:0;
	line-height:40px;
}
.sidebar-menu > li > a {
	padding-left:22px;
	margin:0;
/*	text-align:center;  */
	display:block;
	width:100%;
	text-decoration:none;
}
.sidebar-menu > li > a span {
	padding-left:9px;
}
.sidebar-menu > li > a .put-right {
	/* margin-left:65px; */
	position: absolute;
    right: 10px;
}
.sidebar-menu > li > .menu-item {
	margin:0;
	padding:0;
	white-space:nowrap !important;
	overflow:hidden;
}
.sidebar-menu > li  > .menu-item li{
	margin:0;
	padding:0;
	line-height:40px;
}
.sidebar-menu > li  > .menu-item li > a {
	padding:0;
	margin:0;
	padding-left:47px;
	display:block;
	width:100%;
	text-decoration:none;
}
.main-iframe {
	border:none;
	margin:0;
	padding:0;
	margin-left:194px;
	min-height:890px;
	z-index:800;
	transition: transform .3s ease-in-out,margin .3s ease-in-out;
}

.sidebar-collapse .main-sidebar{
    width: 50px !important;
}
.sidebar-collapse .main-iframe{
	margin-left:50px!important;
}
.sidebar-collapse .sidebar-nav > a {
	margin-right:10px;
}
.sidebar-collapse .sidebar-nav>.sidebar-toggle {
	margin-left:18px;
}
.sidebar-collapse .sidebar-menu>li{
	position:relative; 
}
.sidebar-collapse .sidebar-menu>li>a{
	margin-right:0; 
	text-align:center;
}
.sidebar-collapse .sidebar-menu>li:hover>.menu-item{
	display:block!important;
	position:absolute;
	width:177px;
	left:50px;
	top:40px;
	margin-left:0;
	padding-left:0;
	background-color:#f2f6fb;
	border-bottom-right-radius:4px;
}
.sidebar-collapse .sidebar-menu>li:hover>a>span{
	display:block !important;
	position:absolute;
	left:50px;	
	top:0;
	margin-left:-3px;
	text-align:left;
	padding-left:40px; 
	width:180px;
	height:40px;
	background-color:#e5eaf0;
}
.sidebar-collapse .sidebar-menu>li>a>span,
.sidebar-collapse .sidebar-menu>li>a>span>i,
.sidebar-collapse .sidebar-menu>li>.menu-item,
.sidebar-collapse .sidebar-nav>.sidebar-title,
.sidebar-collapse .sidebar-menu>li>a>.put-right{
	display:none!important;
}
